<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/contour_texte"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/frameLayout">

        <TextView
            android:id="@+id/cecitexte1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cecitexte2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="@string/ceci_texte1"
            android:textColor="#000000"
            android:includeFontPadding="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:id="@+id/cecitexte2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cecitexte1"

            android:text="@string/ceci_texte2"
            android:textColor="#000000"
            android:typeface="serif"

            android:includeFontPadding="false"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30sp"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/quezakoActivity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/quezako_texte1"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/slideContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/slide_continue"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_below="@+id/quezakoActivity1"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true" />






</RelativeLayout>