<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/ceci_texte"
        android:textColor="#000000"
        android:includeFontPadding="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="30sp"
        />



    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000000"
        android:text="@string/timer_value"
        android:layout_below="@+id/activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/activity"
        android:layout_alignEnd="@+id/activity"
        android:layout_alignLeft="@+id/activity"
        android:layout_alignStart="@+id/activity"
        android:layout_alignTop="@id/activity"
        android:layout_alignBottom="@id/activity"

        android:background="@drawable/contour_texte">
    </FrameLayout>


</RelativeLayout>